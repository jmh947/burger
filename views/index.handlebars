<h1>Are you Hungry?</h1>

<ul>
  {{#each burger}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers ready for Devouring!</h2>

<ul>
  {{#each burger}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Style:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Hungry?</label><br>
    <input type="radio" name="devour" value="1" checked> Yes!<br>
    <input type="radio" name="devour" value="0"> Not hungry, thank you.
  </div>

  <br>

  <button type="submit">Add Burger</button>

  <br>
  <br>

  <button type="delete">Delete Burger</button>
    
</form>